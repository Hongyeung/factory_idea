<!DOCTYPE html>
<html>
<head>
  <title>Factory</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
  <hr>
  <%= render "/layouts/flash_messages" %>
  <%= link_to "New Idea", new_idea_path %> | <%= link_to "All Ideas", ideas_path %>
  <div class="pull-right">
  <% if user_signed_in? %>
      Hello <%= current_user.first_name %> <%= current_user.last_name %>!
      <%= link_to "Log Out", sessions_path, method: :delete, class: "btn btn-danger btn-sm" %>
  <% else %>
      <%= link_to "Sign In", new_session_path, class: "btn btn-primary btn-sm" %>

      <%= link_to "Sign Up", new_user_path, class: "btn btn-primary btn-sm" %>
  <% end %>
</div>
  <hr>

<%= yield %>
  </div>
</body>
</html>
